<!DOCTYPE html>
<html>
  <head>
    <title>Nekomach</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <h2 class='ml-5'>
            <% if admin_signed_in? %>
              <%= link_to 'ねこまち', root_path, class:'nav-link text-dark' %>
            <% else %>
              <%= link_to 'ねこまち', root_path, class:'nav-link text-dark' %>
            <% end %>
          </h2>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if end_user_signed_in? %>
                <!--顧客がログインしているとき-->
                  <li class="nav-item">
                    <%= link_to end_users_my_page_path, class:'nav-link text-dark' do %>
                      マイページ
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to destroy_end_user_session_path, method: :delete, class:'nav-link text-dark' do %>
                      ログアウト
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= current_end_user.nick_name %>
                  </li>
    
                <% else %>
                  <!--ログインしていないとき-->
                  <li class="nav-item">
                    <%= link_to new_end_user_registration_path, class:'nav-link text-dark' do %>
                      新規登録
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_end_user_session_path, class:'nav-link text-dark' do %>
                      ログイン
                    <% end %>
                  </li>
                  <li class="nav-item">
                    ゲストユーザー
                  </li>
                <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main class="mb-auto">
    <%= yield %>
    </main>
  
  </body>
</html>