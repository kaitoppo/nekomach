<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">LogIn</h5>
      <div class="form-body p-4">
        <!--エラー文-->
        <%= render "public/shared/error_messages", resource: resource %>
        <!--ログインフォーム-->
        <%= form_with model: @end_user, url: end_user_session_path do |f| %>
          <p>Eメールアドレス</p>
          <div class="input-group mb-3">
            <%= f.email_field :email, autofocus: true %>
          </div>
          <p>パスワード</p>
          <div class="input-group mb-3">
            <%= f.password_field :password %>
          </div>
          <div class="actions">
            <%= f.submit "ログイン", class: 'btn btn-success' %>
          </div>
        <% end %>
    </div>
  </div>
</div>