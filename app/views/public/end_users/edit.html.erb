<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ユーザー情報編集</h5>
      <div class="form-body p-4">
        <!--ログインフォーム-->
        <%= form_with model: @end_user, url: end_users_information_path do |f| %>
          <p>ニックネーム</p>
          <div class="input-group mb-3">
            <%= f.text_field :nick_name %>
          </div>
          <p>プロフィール画像</p>
          <div class="input-group mb-3">
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="actions">
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
            <%= link_to "退会する",  end_users_withdrawal_check_path, class:'btn btn-danger' %>
          </div>
        <% end %>
    </div>
  </div>
</div>